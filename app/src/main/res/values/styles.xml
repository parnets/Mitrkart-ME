<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="serach">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45dp</item>
        <item name="android:layout_marginLeft">@dimen/_5dp</item>
        <item name="android:layout_marginRight">@dimen/_5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:hint">Search for the products</item>
        <item name="android:drawablePadding">@dimen/_10dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:cursorVisible">false</item>
    </style>

</resources>