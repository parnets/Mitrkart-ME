        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rlBtn9_emp"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/button_round_bg">


                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_minus9_emp"
                    android:layout_width="@dimen/_40dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="25dp"
                    android:textColor="@color/md_white_1000"
                    android:text="-"/>
                <EditText
                    android:id="@+id/tv_num9_emp"
                    android:layout_toRightOf="@+id/tv_minus9_emp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@null"
                    android:textSize="@dimen/_20dp"
                    android:gravity="center"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:text="1"
                    android:maxLength="4"
                    />

                <TextView
                    android:id="@+id/tv_plus9_emp"
                    android:layout_toRightOf="@+id/tv_num9_emp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/md_white_1000" />



            </LinearLayout>

            <Button
                android:id="@+id/btn_addcart_employee"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:text="Add to cart"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/button_round_bg"/>
        </LinearLayout>

    </LinearLayout>


