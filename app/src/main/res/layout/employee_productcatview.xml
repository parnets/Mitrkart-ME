<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_productview_employee"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/grid_color_selector">

        <LinearLayout
            android:layout_width="@dimen/_220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/product_viewimg_emp"
                android:layout_width="100dp"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_height="90dp" />


            <TextView
                android:id="@+id/product_viewtxt_emp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:text="Name"
                android:layout_marginLeft="@dimen/_15dp"
                android:maxLines="5"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/product_Quantity_emp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:text="Quantity"
                android:layout_marginLeft="@dimen/_15dp"
                android:maxLines="2"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/DarkGreen"
                    android:text="Price ₹"/>
                <TextView
                    android:id="@+id/product_pricetxt_emp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:text="Price"
                    android:maxLines="2"
                    android:textColor="@color/DarkGreen"
                    android:textSize="14dp"
                    android:visibility="visible"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:text="MRP  ₹"/>
                <TextView
                    android:id="@+id/tvepv_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:background="@drawable/strike_through"
                    android:text="MRP"
                    android:maxLines="2"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:visibility="visible"/>
            </LinearLayout>


