<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_white_mobile_otp_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="@dimen/_50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imglogo_emp"
            android:layout_width="@dimen/_300dp"
            android:layout_height="130dp"
            android:background="@drawable/mitrakarte_logo"/>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-medium"
            android:text="Employee Login"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/login_id_employee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_35dp"
            android:inputType="number"
            android:background="@drawable/edittext_border_bg"
            android:fontFamily="sans-serif-medium"
            android:hint="Mobile Number"
            android:maxLength="10"
            android:paddingLeft="15dp"
            android:textColor="@color/md_black_1000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/login_password_employee"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/edittext_border_bg"
                android:fontFamily="sans-serif-medium"
                android:hint="Password"

                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/md_black_1000" />

        </RelativeLayout>

        <TextView
            android:id="@+id/forget_password_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_25dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text=" Forgot Password  "
            android:textColor="@color/md_logo_orange"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_employee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_30dp"
            android:background="@drawable/button_round_bg"
            android:fontFamily="sans-serif-medium"
            android:text="LOGIN"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp" />

<!--        <TextView-->
<!--            android:id="@+id/signUp_text_employee"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:fontFamily="sans-serif-medium"-->
<!--            android:text="New Corporate? Signup"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="#002266"-->
<!--            android:textSize="18sp"-->
<!--            android:textStyle="bold" />-->


    </LinearLayout>







</LinearLayout>