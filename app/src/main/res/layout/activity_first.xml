<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/gradient_orange_mobile_otp_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/mitrakarte_logo"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_50dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/_16sp"
        android:text="Select Type of Account"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/colorBlue" />

    <Spinner
        android:id="@+id/spinnerTypeOfAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_border_bg" />


    <Button
        android:id="@+id/btnSubmitAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/_60dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/button_round_bg"
        android:text="Submit"
        android:textColor="#fff"
        android:textSize="@dimen/_18sp" />



</LinearLayout>