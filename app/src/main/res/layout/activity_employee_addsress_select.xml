            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp">

                <EditText
                    android:id="@+id/et_addr_name_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:hint="Name*"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:maxLength="40"
                    android:background="@drawable/edittext_border_bg"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp">

                <EditText
                    android:id="@+id/et_addr_email_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:hint="Email*"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:maxLength="40"
                    android:background="@drawable/edittext_border_bg"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_phno_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:hint="phone no*"
                    android:textSize="@dimen/_13sp"
                    android:maxLength="10"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/et_addr_addr_emp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80dp"
                android:background="@drawable/edittext_border_bg"
                android:layout_marginTop="10dp"
                android:hint="Add Address*"
                android:gravity="start"
                android:textSize="@dimen/_13sp"
                android:inputType="textCapSentences"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456798abcdefghijklmnopqrstuvwxyz ,:-_/"
                android:paddingLeft="10dp"
                android:maxLength="200"
                android:paddingTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_locality_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:hint="Locality"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:maxLength="30"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_Pin_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:hint="Pincode: "
                    android:textSize="@dimen/_13sp"
                    android:inputType="number"
                    android:maxLength="6"/>
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_landmark_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:hint="Landmark"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:maxLength="30"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_city_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:hint="City*"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_addr_state_emp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:background="@drawable/edittext_border_bg"
                    android:textSize="@dimen/_13sp"
                    android:inputType="textCapSentences"
                    android:hint="State*"/>
            </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <EditText
                                android:id="@+id/et_addr_country_emp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50dp"
                                android:paddingLeft="@dimen/_10dp"
                                android:background="@drawable/edittext_border_bg"
                                android:textSize="@dimen/_13sp"
                                android:inputType="textCapSentences"
                                android:hint="Country*"/>
                        </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <Button
                    android:id="@+id/add_submit_emp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_round_bg"
                    android:backgroundTint="@color/md_logo_orange"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_40dp"
                    android:text="SUBMIT"
                    android:textColor="@color/md_white_1000"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>