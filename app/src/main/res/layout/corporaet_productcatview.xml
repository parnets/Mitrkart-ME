<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_productview_corporate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    android:layout_margin="@dimen/_5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_color_selector"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_viewimg_cor"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/product_viewtxt_cor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:text="Fruits"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/product_Quantity_cor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:text="Quantity"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:text="Price ₹"
                    android:textColor="@color/DarkGreen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_pricetxt_cor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="Price"
                    android:textColor="@color/DarkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="MRP  ₹"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvccpv_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/strike_through"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="MRP"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rlBtn9_corporate"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_50dp"
                android:background="@drawable/button_round_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_minus9_cor"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/md_white_1000" />

                <EditText
                    android:id="@+id/tv_num9_cpor"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_toRightOf="@+id/tv_minus9_cor"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/_20dp" />

                <TextView
                    android:id="@+id/tv_plus9_cor"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_num9_cpor"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/md_white_1000" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_addcart_corporate"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/button_round_bg"
                android:text="Add to cart" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
