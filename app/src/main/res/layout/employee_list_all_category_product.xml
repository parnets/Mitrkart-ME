            <!--                    android:visibility="visible"/>-->
            <!--            </LinearLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rlBtn_catProduct_Emp"
                android:layout_width="@dimen/_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/button_round_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_minus4_Emp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/md_white_1000" />

                <EditText
                    android:id="@+id/tv_num4_Emp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_minus4_Emp"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/_20dp" />

                <TextView
                    android:id="@+id/tv_plus4_Emp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_num4_Emp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/md_white_1000" />


            </LinearLayout>

            <Button
                android:id="@+id/btnaddcartnewproductsubcat_Emp"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginLeft="@dimen/_40dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/button_round_bg"
                android:text="Add to cart" />
