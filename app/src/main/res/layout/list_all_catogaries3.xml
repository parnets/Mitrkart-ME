<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_all_productproduct4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_color_selector"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_item_imageproduct4"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_80dp"
                android:layout_marginLeft="15dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"

                android:visibility="visible" />


            <TextView
                android:id="@+id/category_item_titleproduct4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50dp"
                android:layout_marginTop="2dp"


                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:text="Fruits"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/category_item_titleproductQuantity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="Fruits"
                android:textColor="@color/alaska_sky"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:text="Price  ₹"
                    android:textColor="@color/DarkGreen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_distriprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="Price"
                    android:textColor="@color/DarkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:text="MRP   ₹"
                    android:textColor="@color/red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvkp_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/strike_through"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="MRP"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rlBtn"
                android:layout_width="@dimen/_120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/button_round_bg"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_minus4"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/md_white_1000" />

                <EditText
                    android:id="@+id/tv_num4"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_minus"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/_20dp" />

                <TextView
                    android:id="@+id/tv_plus4"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_num"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/md_white_1000" />


            </LinearLayout>

            <Button
                android:id="@+id/btnaddcartnewproductsubcat"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/button_round_bg"
                android:text="Add to cart" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
